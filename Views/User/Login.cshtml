@model LoginViewModel

<div class="form-signin w-50 m-auto" style="max-width: 600px;">
  <form asp-action="Login" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <h1 class="h3 mb-3 fw-normal">Giriş Yapın</h1>
    <div class="row g-3">

    <div class="form-floating mt-3">
      <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
      <label for="floatingEmail">Email adresi</label>
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>

    <div class="form-floating mt-3">
      <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Şifre</label>
    </div>
    <span asp-validation-for="Password" class="text-danger"></span>

    <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
    <p class="mt-3 mb-3 text-body-secondary">&copy; 2017–2024</p>
  </form>
</div>

<style>
  body{
    background-image: "~/img/1.png";
  }
</style>
