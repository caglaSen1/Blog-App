@model RegisterViewModel

<div class="form-signin w-50 m-auto" style="max-width: 600px;">
  <form asp-action="Register" method="post" enctype="multipart/form-data">
    <h1 class="h3 mb-3 fw-normal">Kayıt Olun</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="row g-3">
      <div class="col-lg-6">
        <div class="form-floating">
          <input asp-for="FirstName" type="text" class="form-control" id="floatingFirstName" placeholder="Ad">
          <label for="floatingFirstName">Ad</label>
        </div>
        <span asp-validation-for="FirstName" class="text-danger"></span>
      </div>
      <div class="col-lg-6">
        <div class="form-floating">
          <input asp-for="LastName" type="text" class="form-control" id="floatingLastName" placeholder="Soyad">
          <label for="floatingLastName">Soyad</label>
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
      </div>
    </div>

    <div class="form-floating mt-3">
      <input asp-for="UserName" type="text" class="form-control" id="floatingUserName" placeholder="Kullanıcı Adı">
      <label for="floatingUserName">Kullanıcı Adı</label>
    </div>
    <span asp-validation-for="UserName" class="text-danger"></span>

    <div class="form-floating mt-3">
      <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
      <label for="floatingEmail">Email adresi</label>
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>

    <div class="form-floating mt-3">
      <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Şifre</label>
    </div>
    <span asp-validation-for="Password" class="text-danger"></span>

    <div class="form-floating mt-3">
      <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingPassword"
        placeholder="Password">
      <label for="floatingPassword">Şifre tekrarı</label>
    </div>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>

    <button class="btn btn-primary w-100 py-2" type="submit">Kayıt Ol</button>
    <p class="mt-3 mb-3 text-body-secondary">&copy; 2017–2024</p>
  </form>
</div>
