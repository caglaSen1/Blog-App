@model Blog

<div class="row">
    <div class="col-lg-8">
        <div class="card bg-white p-4 rounded shadow-sm">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags mb-3">
                @foreach (var tag in Model.Tags)
                {
                    <a href="/blog/tag/@tag.Url"
                        class="badge bg-@tag.Color bg-opacity-5 text-white mb-2 fw-bold">@tag.Name</a>
                }
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded mb-3" alt="">
            <ul class="list-inline my-3">
                <li class="list-inline-item"><i class="bi bi-person-circle"><a>@Model.User.UserName</a></i></li>
                <li class="list-inline-item"><i class="bi bi-calendar">@Model.CreatedAt.ToString("d")</i></li>
            </ul>
            <div>@Html.Raw(@Model.Content)</div>
        </div>
        <br>
        <div class="card bg-white mt-3 rounded shadow-sm mb-4">
            <div class="card-header border-0">
                <div class="row">
                    <div class="col-lg-6 d-flex align-items-center">
                        <div class="me-3">
                            <h5 id="commentCount" class="d-inline">@Model.Comments.Count()</h5>
                            <span>yorum</span>
                        </div>
                        <div>
                            <h5 id="likeCount" class="d-inline">@Model.LikeCount</h5>
                            <span>beğeni</span>
                        </div>
                    </div>
                    <div class="col-lg-6 text-end">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <button id="btnLike" class="btn btn-primary">Beğen</button>
                            <input type="hidden" id="BlogId" value="@Model.Id" />
                        }
                        else
                        {
                            <p>Yorum yapabilmek için giriş yapınız. <a href="/user/login">Login</a></p>
                        }
                    </div>
                </div>
            </div>

            <div class="card-body pb-4">
                <div id="comment">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="my-4 d-flex">
                            <img src="/img/@comment.User.Image" class="avatar rounded-circle float-start me-3" alt="">
                            <div>
                                <div class="mb-2 d-flex">
                                    <h6 class="me-2">@comment.User.UserName</h6>
                                    <small>@comment.CreatedAt.ToString("d")</small>
                                </div>
                                <p>@comment.Text</p>
                            </div>
                        </div>
                    }
                </div>
                @if (User.Identity!.IsAuthenticated)
                {
                    <hr class="my-4">
                    <div>
                        <h4 class="mb-3">Yorum Ekle</h4>
                        <form action="/blog/AddComment" method="post">
                            <input type="hidden" id="BlogId" name="BlogId" value="@Model.Id">
                            <div class="mb-3">
                                <label for="Text" class="form-label">Yorum</label>
                                <textarea type="text" name="Text" id="Text" rows="3" class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <button id="btnCommentSave" type="submit" class="btn btn-primary">Gönder</button>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <p>Yorum yapabilmek için giriş yapınız. <a href="/user/login">Login</a></p>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card bg-white rounded shadow-sm mb-4">
            <vc:popular-tags-menu></vc:popular-tags-menu>
        </div>
        <div class="card bg-white rounded shadow-sm mb-4">
            <vc:popular-blogs-menu></vc:popular-blogs-menu>
        </div>
        <div class="card bg-white rounded shadow-sm mb-4">
            <vc:new-blogs></vc:new-blogs>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnCommentSave").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AddComment")',
                    dataType: 'json',
                    data: {
                        blogId: $('#BlogId').val(),
                        text: $('#Text').val()
                    },
                    success: function (json) {
                        var date = new Date(json.commentTime);

                        $("#comment").append(`
                                                                                <div class="my-4 d-flex">
                                                                                <img src="/img/${json.userImage}" class="avatar rounded-circle float-start me-3" alt="">
                                                                                <div>
                                                                                <div class="mb-2 d-flex">
                                                                                    <h6 class="me-2">${json.userName}</h6>
                                                                                    <small>${date.toLocaleDateString()}</small>
                                                                                </div>
                                                                                <p>${json.text}</p>
                                                                            </div>
                                                                                </div>                        
                                                                            `);

                        $("#Text").val('');

                        var count = parseInt($("#commentCount").text());
                        $("#commentCount").text(count + 1);
                    },
                    error: function (error) {
                        alert("Yorum eklenirken bir hata oluştu.");
                    }
                });

                return false;
            });
            $("#btnLike").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Like")',
                    dataType: 'json',
                    data: {
                        blogId: $('#BlogId').val()
                    },
                    success: function (json) {
                        if (json.success) {
                            var count = parseInt($("#likeCount").text());
                            $("#likeCount").text(count + 1);
                        } else {
                            alert("Beğeni işleminde bir hata oluştu." + json.message);
                        }
                    },
                    error: function (error) {
                        alert("Beğeni işleminde bir hata oluştu.");
                    }
                });

                return false;
            });

        });
    </script>
}
