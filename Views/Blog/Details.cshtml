@model Blog

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h1 class="h4">@Model.Title</h1>
            </div>
            <div class="tags">
                @foreach (var tag in Model.Tags)
                {
                    <a href="/blog/tag/@tag.Url"
                        class="badge bg-@tag.Color bg-opacity-5 text-white mb-2 fw-bold">@tag.Name</a>
                }
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
            <div>@Model.Content</div>
        </div>
        <br>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4><span id="commentCount">@Model.Comments.Count()</span> adet yorum var.</h4>
                </div>
                <div class="card-body">
                    <div id="comment">
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="my-4 d-flex">
                                <img src="/img/@comment.User.Image" class="avatar rounded-circle float-start me-3" alt="">
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">@comment.User.UserName</h6>
                                        <small>@comment.CreatedAt.ToString("d")</small>
                                    </div>
                                    <p>@comment.Text</p>
                                </div>
                            </div>
                        }
                    </div>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <hr class="my-4">
                        <div>
                            <h4 class="mb-3">Yorum Ekle</h4>
                            <form action="/blog/AddComment" method="post">
                                <input type="hidden" id="BlogId" name="BlogId" value="@Model.Id">
                                <div class="mb-3">
                                    <label for="Text" class="form-label">Yorum</label>
                                    <textarea type="text" name="Text" id="Text" rows="3" class="form-control"></textarea>
                                </div>
                                <div class="mb-3">
                                    <button id="btnCommentSave" type="submit" class="btn btn-primary">Gönder</button>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>Yorum yapabilmek için giriş yapınız. <a href="/user/login">Login</a></p>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnCommentSave").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AddComment")',
                    dataType: 'json',
                    data: {
                        blogId: $('#BlogId').val(),
                        text: $('#Text').val()
                    },
                    success: function (json) {
                        var date = new Date(json.commentTime);

                        $("#comment").append(`
                                        <div class="my-4 d-flex">
                                        <img src="/img/${json.userImage}" class="avatar rounded-circle float-start me-3" alt="">
                                        <div>
                                        <div class="mb-2 d-flex">
                                            <h6 class="me-2">${json.userName}</h6>
                                            <small>${date.toLocaleDateString()}</small>
                                        </div>
                                        <p>${json.text}</p>
                                    </div>
                                        </div>                        
                                    `);

                        $("#Text").val('');

                        var count = parseInt($("#commentCount").text());
                        $("#commentCount").text(count + 1);
                    },
                    error: function (error) {
                        alert("Yorum eklenirken bir hata oluştu.");
                    }
                });

                return false;
            });

        });
    </script>
}