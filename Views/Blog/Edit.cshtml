@model BlogEditViewModel
<h2>Blog Düzenle</h2>
<hr>
<form asp-controller="Blog" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-8">
            <div class="mb-3">
                <label asp-for="BlogTitle" class="form-label">Başlık</label>
                <input asp-for="BlogTitle" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="BlogDescription" class="form-label">Açıklama</label>
                <input asp-for="BlogDescription" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="BlogContent" class="form-label">İçerik</label>
                <textarea asp-for="BlogContent" class="form-control" rows="15"></textarea>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="mb-3">
                <label asp-for="BlogImage" class="form-label">Görsel</label>
                <input type="file" name="imageFile" class="form-control">
                <small>Current Image:</small><br>
                <img src="~/img/@Model.BlogImage" alt="" style="width: 100px; height: auto; display: block;">
            </div>
            <div class="mb-3">Etiketler
                <div class="card">
                    <div class="card-body">
                        <ul class="list-inline d-flex flex-wrap gap-2">
                            @foreach (var tag in Model.Tags)
                            {
                                <li class="list-inline-item">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="SelectedTags" value="@tag.Id"
                                            id="tag-@tag.Id" @(Model.SelectedTags.Contains(tag.Id) ? "checked" : "")>
                                        <label class="form-check-label" for="tag-@tag.Id">
                                            @tag.Name
                                        </label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>