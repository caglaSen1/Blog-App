@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<!-- <img class="mb-4" src="~/img/p1.jpg" alt="Logo" width="72" height="57"> -->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>Bloghub</title>
</head>

<body>
    @if (User.Identity!.IsAuthenticated)
    {
        @if (User.FindFirstValue(ClaimTypes.Role) == "admin")
        {
            <header id="myHeaderBackground" class="p-3 mb-3 border-bottom">
                <div class="container">
                    <div class="d-flex flex-wrap align-items-center justify-content-between">
                        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                            <h3>Bloghub Admin Paneli</h3>
                            <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                                <use xlink:href="#bootstrap" />
                            </svg>
                        </a>

                        <ul class="nav col-lg-auto mb-2 justify-content-end mb-md-0">
                            <li><a href="/admin/home" class="nav-link px-2 link-body-emphasis">Yönetim</a></li>
                            <li><a href="/blog/list" class="nav-link px-2 link-body-emphasis">Bloglar</a></li>
                            <li><a href="/user/logout" class="nav-link px-2 link-body-emphasis">Çıkış</a></li>
                        </ul>
                    </div>
                </div>
            </header>
        }
        else
        {
            <header id="myHeaderBackground" class="p-3 mb-3 border-bottom">
                <div class="container">
                    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none"><h2>Bloghub</h2>
                            
                            <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                                <use xlink:href="#bootstrap" />
                            </svg>
                        </a>

                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                            
                            <li><a href="#" class="nav-link px-2 link-body-emphasis">Home</a></li>
                            <li><a href="#" class="nav-link px-2 link-body-emphasis">Customers</a></li>
                            <li><a href="#" class="nav-link px-2 link-body-emphasis">Products</a></li>
                        </ul>

                        <div class="dropdown text-end">
                            <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="me-2">@User.Identity.Name</span>
                                <img src="~/img/@User.FindFirstValue(ClaimTypes.UserData)" alt="mdo" width="32" height="32" class="rounded-circle">
                            </a>
                            <ul class="dropdown-menu text-small">
                                <li><a class="dropdown-item" href="/profile/@User.FindFirstValue(ClaimTypes.Name)">Profilim</a></li>
                                <li><a class="dropdown-item" href="/blog/create">Blog Yaz</a></li>
                                <li><a class="dropdown-item" href="/blog/manage">Bloglarım</a></li>
                                <li><a class="dropdown-item" href="#">Ayarlar</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/user/logout">Çıkış Yap</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
        }
    }
    else
    {
        <header id="myHeaderBackground" class="p-3 ">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                            <use xlink:href="#bootstrap" />
                        </svg>
                    </a>
                    
                      <a href="/blog/list"
                        class="d-flex align-items-center mb-2 mr-10 mb-lg-0 link-body-emphasis text-decoration-none"><h1>Bloghub</h1>
                        </a>
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        
                        <li><a href="#" class="nav-link px-2 text-white">Home</a></li>
                        <li><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
                        <li><a href="#" class="nav-link px-2 text-white">About</a></li>
                    </ul>

                    <div class="text-end">
                        <a href="/user/login" class="btn btn-outline-light me-2" role="button">Giriş Yap</a>
                        <a href="/user/register" class="btn btn-outline-light me-2" role="button">Kayıt Ol</a>
                    </div>
                </div>
            </div>
        </header>
    }

    <div class="container mt-3">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</html>