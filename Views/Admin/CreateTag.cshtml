@model TagCreateViewModel

<h2>Create Tag</h2>
<hr>
<form asp-action="CreateTag" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="row">
        <div class="col-lg-8">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>

            <div class="mb-3">Colors
                <div class="card">
                    <div class="card-body d-flex flex-wrap gap-2">
                        @foreach (var color in Model.Colors)
                        {
                            <label class="form-check-label">
                                <input type="radio" name="SelectedColorStr" value="@color" class="form-check-input"
                                @(Model.SelectedColorStr == color ? "checked" : "")>
                                <div style="background-color: @color; width: 30px; height: 30px; border-radius: 5px;"></div>
                            </label>
                        }
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>

<style>
    .form-check-input {
        display: none;
        /* Hide the default radio button */
    }

    .form-check-label {
        display: inline-block;
        cursor: pointer;
    }

    .form-check-label div {
        border: 2px solid transparent;
        cursor: pointer;
    }

    .form-check-input:checked+div {
        border: 2px solid black;
    }
</style>
